namespace hibiki.ipc;

table ParamInfo {
    id: uint;
    name: string;
    default_value: float;
}

table ParamList {
    track_index: int;
    plugin_index: int;
    plugin_name: string;
    is_instrument: bool;
    params: [ParamInfo];
}

table Log {
    message: string;
}

table Acknowledge {
    command_type: string;
    success: bool;
}

table ClipInfo {
    track_index: int;
    slot_index: int;
    name: string;
}

table ClearProject {}

union Response {
    ParamList,
    Log,
    Acknowledge,
    ClipInfo,
    ClearProject
}

table Notification {
    response: Response;
}

root_type Notification;
