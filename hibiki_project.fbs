namespace hibiki.project;

table Parameter {
    id: uint;
    value: float;
}

table Plugin {
    path: string;
    index: int;
    parameters: [Parameter];
}

enum ClipType : byte { MIDI = 0, AUDIO = 1 }

table Clip {
    slot_index: int;
    path: string;
    is_loop: bool = false;
    type: ClipType = MIDI;
}

table Track {
    index: int;
    plugins: [Plugin];
    clips: [Clip];
}

table Project {
    bpm: float = 120.0;
    tracks: [Track];
}

root_type Project;
